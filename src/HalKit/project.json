{
    "version": "0.7.3",
    "authors": [ "viagogo" ],
    "copyright": "viagogo 2016",
    "title": "HalKit",
    "description": "A lightweight .NET library for creating and consuming HAL hypermedia APIs",
    "buildOptions": {
        "warningsAsErrors": false,
        "platform": "anycpu",
        "languageVersion": "csharp6",
        "debugType": "portable"
    },
    "packOptions": {
        "owners": [ "viagogo" ],
        "summary": "A lightweight .NET library for creating and consuming HAL hypermedia APIs",
        "tags": [ "HAL", "Hypermedia", "API", "REST", "viagogo" ],
        "repository": {
            "type": "git",
            "url": "https://github.com/viagogo/halkit.git"
        },
        "requireLicenseAcceptance": true,
        "licenseUrl": "https://github.com/viagogo/HalKit/blob/master/LICENSE.txt",
        "projectUrl": "https://github.com/viagogo/halkit"
    },
    "configurations": {
        "Debug": {},
        "Release": {
            "buildOptions": {
                "optimize": true
            }
        }
    },
    "frameworks": {
        "netstandard11": {
            "dependencies": {
                "NETStandard.Library": "1.6.0",
                "System.Net.Http": "4.1.0",
                "System.Threading.Tasks": "4.0.11",
                "Newtonsoft.Json": "9.0.1",
                "Tavis.UriTemplates": "1.1.0"
            }
        }
    }
}